<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pull_refresh_background">

    <RelativeLayout
            android:layout_alignParentBottom="true"
            android:padding="@dimen/pull_view_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            <ImageView
                    android:id="@id/refresh_image_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:background="@mipmap/icon_arrow_down"/>

            <ImageView
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:id="@id/refresh_image_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@id/refresh_image_arrow"
                    android:background="@mipmap/icon_loading"/>

            <TextView
                    android:id="@id/refresh_text_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Refresh..."
                    android:textColor="@color/text_color"
                    android:textSize="16sp"/>

            <ImageView
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:id="@id/refresh_image_state"
                    android:background="@mipmap/icon_load_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/refresh_text_state"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
