<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@id/load_more_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pull_load_more_background">

    <RelativeLayout
            android:layout_alignParentTop="true"
            android:padding="@dimen/pull_view_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

            <ImageView
                    android:id="@id/load_image_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:background="@mipmap/icon_arrow_up"/>

            <ImageView
                    tools:visibility="visible"
                    android:id="@id/load_image_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@id/load_image_arrow"
                    android:background="@mipmap/icon_loading"
                    android:visibility="gone"/>

            <TextView
                    android:gravity="center"
                    android:id="@id/load_text_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Loading..."
                    android:textColor="@color/text_color"
                    android:textSize="16sp"/>

            <ImageView
                    tools:visibility="visible"
                    android:background="@mipmap/icon_load_success"
                    android:id="@id/load_image_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/load_text_state"
                    android:visibility="gone"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
